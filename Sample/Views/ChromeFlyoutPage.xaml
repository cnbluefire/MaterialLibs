<Page
    x:Class="Sample.Views.ChromeFlyoutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Simple.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helper="using:MaterialLibs.Helpers"
    mc:Ignorable="d"
    helper:TransitionsHelper.Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button Content="ClickMe">
            <Button.Flyout>
                <MenuFlyout MenuFlyoutPresenterStyle="{StaticResource ChromeMenuFlyoutPresenter}" Placement="Right">
                    <MenuFlyoutItem Text="A" Style="{StaticResource ChromeMenuFlyoutItem}" Loaded="MenuFlyoutItem_Loaded"/>
                    <MenuFlyoutSubItem Text="B">
                        <MenuFlyoutItem Text="B1" />
                        <MenuFlyoutSubItem Text="B2">
                            <MenuFlyoutItem Text="B2-1" />
                            <MenuFlyoutItem Text="B2-2" />
                        </MenuFlyoutSubItem>
                    </MenuFlyoutSubItem>
                </MenuFlyout>
            </Button.Flyout>
        </Button>
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Content="TEST" x:Name="TestPipe" />
    </Grid>
</Page>
