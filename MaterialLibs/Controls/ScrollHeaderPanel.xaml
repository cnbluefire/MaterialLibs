<UserControl
    x:Class="MaterialLibs.Controls.ScrollHeaderPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MaterialLibs.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:m_helper="using:MaterialLibs.Helpers"
    mc:Ignorable="d m_helper"
    d:DesignHeight="300"
    d:DesignWidth="400" 
    Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
   
    <Border x:Name="RootBorder" m_helper:VisualHelper.CenterPoint="{Binding ContentCenterPoint}">
        <ContentPresenter x:Name="_ContentPresenter" Content="{Binding Content}" />
    </Border>
</UserControl>
